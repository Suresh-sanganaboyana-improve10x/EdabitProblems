<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fizzbuzzinterviewquestion.FizzBuzzActivity">

    <EditText
        android:id="@+id/input_fizz_buzz_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toast_fizz_buzz_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/fizz_buzz_btn"
        app:layout_constraintEnd_toEndOf="@+id/input_fizz_buzz_txt"
        app:layout_constraintStart_toStartOf="@+id/input_fizz_buzz_txt"
        app:layout_constraintTop_toBottomOf="@+id/input_fizz_buzz_txt" />

    <Button
        android:id="@+id/fizz_buzz_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FindFizzOrBUzz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/toast_fizz_buzz_txt"
        app:layout_constraintStart_toStartOf="@+id/toast_fizz_buzz_txt"
        app:layout_constraintTop_toBottomOf="@+id/input_fizz_buzz_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>