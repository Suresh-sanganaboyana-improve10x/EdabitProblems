<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllProblemsActivity">

    <Button
        android:id="@+id/three_programmers_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Programmerss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/minutes_seconds_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ConvertMinutesToSeconds"
        app:layout_constraintEnd_toEndOf="@+id/three_programmers_btn"
        app:layout_constraintStart_toStartOf="@+id/three_programmers_btn"
        app:layout_constraintTop_toBottomOf="@+id/three_programmers_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>